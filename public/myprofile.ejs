        var s = '<br><br><center><h5 style="color: red;">please wait removing Video<br><br><img src="images/833.gif" height="50px" width="50px"></h5></center>'
        $(path_reveal_id).hide()
        $(path_reveal_id).append(s)
        $(path_reveal_id).fadeIn(600)
        
        $.ajax({
            url:'/mainpage/remove',
            type:'GET',
            data:{
                'vid_name' : vid,
                'vid_path' : path
            },
            success:function(para)
            {
      
                $(path_reveal_id).hide()
