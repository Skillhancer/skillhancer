//function for removing video

function removeVideo(vid2,path)
{
    var path_id = '#'+vid2[vid2.length-1]+'parent';
    var path_reveal_id = '#'+vid2[vid2.length-1]+'reveal'
    var vid = vid2.substring(0, vid2.length-1);
